<% if activities.any? %>
  <% activities.each do |activity| %>
    <li class="item-activity row">
      <div class="col-xs-1">
        <%= image_tag "avatar.jpg", class: "avatar-user-activity" %>  
      </div>
      <div class="col-xs-10 info-activity">
        <a href="#"><%= activity.user.name %></a>
        <span><%= activity.activity_type + " " + activity.content %></span>
        <br>
        <span class="time-stamp">3 <%= t "activities.time_ago" %></span>
      </div>
    </li>
  <% end %>
<% end %>