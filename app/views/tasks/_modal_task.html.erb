        <a data-toggle="collapse" data-target="#show-description-update" class="show-description-task">edit</a>
        <br>
        <%= form_for [project, task] do |f| %>
	        <div class="collapse" id="show-description-update">
	        	<%= f.text_area :description, class: "form-control form-description-task", rows: "5" %>
	        	<%= f.submit :save, class: "btn btn-sm btn-success btn-save-description" %>
