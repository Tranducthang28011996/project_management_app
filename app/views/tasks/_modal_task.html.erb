    <div class="header-modal">
      <h3><i class="fa fa-braille" aria-hidden="true"></i> <%= task.name %></h3>
      <div class="detail-content">
        <span class="title-position-task">in list <a href=""><%= task.status.name %></a></span>
        <%= hidden_field_tag :task_id, task.id %>
        <br>
        <div class="block-label-modal">
