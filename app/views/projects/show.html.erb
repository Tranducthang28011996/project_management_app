<div id="content">
  <div id="nav-menu">
    <button class="btn btn-sm btn-nav">
      <%= @project.name %>
    </button>

    <button class="btn btn-sm btn-nav">
      <i class="fa fa-heart-o" aria-hidden="true"></i>
    </button>

    <button class="btn btn-sm btn-nav pull-right btn-show-menu-project">
      <i class="fa fa-bars" aria-hidden="true"></i>
      <%= t ".show_menu" %>
    </button>
  </div>

  <%= hidden_field_tag :project_id, @project.id %>
  <%= hidden_field_tag :team_id, @project.team.id %>

  <%= render "projects/board" %>

  <div class="multi-dropdown">
    <section class="main step step-1 side-bar-menu-project">
      <h4 class="title-menu-info-project"><%= t ".menu" %></h4>
      <div class="icon-close-menu pop-over-header-close-btn">
        <i class="ion-android-close"></i>
      </div>
      <section class="step-chosen scroll-bar-style">
        <div class="list-member-project">
          <% @team_user[0..7].each do |user| %>
            <%= link_to user, class: "item-member-project" do %>
              <% if user.avatar.present? %>
                <%= image_tag user.avatar.url, title: user.name, class: "avatar-item-user-list-member" %>
              <% else %>
                <%= image_tag "https://thesocietypages.org/socimages/files/2009/05/vimeo.jpg", title: user.name,
                  class: "avatar-item-user-list-member" %>
              <% end %>
            <% end %>
          <% end %>
        </div>
        <div class="dropdown">
          <button class="btn btn-width-full text-left btn-page dropdown-toggle" type="button" data-toggle="dropdown">
            <i class="fa fa-user-plus" aria-hidden="true"></i> <%= t ".invite" %>...
          </button>
          <div class="dropdown-menu form-search-member">
            <span class="header">
              <%= t ".member" %>
            </span>
            <a class="pop-over-header-close-btn">
              &times
            </a>
            <input type="text" class="form-control input-text search-member" placeholder="abc@gmail.com">
            <div class="result-search-user-add">
              <div class="show-info-user-search">
                <%= t ".user_search" %>
              </div>
            </div>
          </div>
        </div>
        <hr>
        <ul class="list-setting">
          <li>
            <button class="btn btn-settings next-step" data-change-window="3">
              <i class="ion-android-funnel" aria-hidden="true"></i> <%= t ".filter_task" %>
            </button>
          </li>
          <li>
            <div class="dropdown">
              <button class="btn dropdown-toggle btn-settings next-step" data-change-window="2">
                <i class="ion-ios-gear-outline" aria-hidden="true"></i> <%= t ".setting" %>
              </button>
            </div>
          </li>
        </ul>
        <hr>
        <div class="list-setting">
          <button class="btn btn-settings">
            <i class="ion-ios-barcode-outline" aria-hidden="true"></i> <%= t ".activity" %>
          </button>
          <ul class="list-activity">
            <%= render @activities %>
          </ul>
        </div>
      </section>
    </section>
    <section class="step step-2 side-bar-menu-project">
      <h4 class="title-menu-info-project"><%= t ".setting" %></h4>
      <div class="icon-back-menu pop-over-header-back-btn"><i class="ion-android-arrow-back"></i></i></div>
      <div class="icon-close-menu pop-over-header-close-btn"><i class="ion-android-close"></i></div>
      <span class="header">
        Tạo dự án mới
      </span>
    </section>
    <section class="step step-3 side-bar-menu-project">
      <h4 class="title-menu-info-project"><%= t ".filter_task" %></h4>
      <div class="icon-back-menu pop-over-header-back-btn"><i class="ion-android-arrow-back"></i></i></div>
      <div class="icon-close-menu pop-over-header-close-btn"><i class="ion-android-close"></i></div>
      <span class="header">
        <div class="filter-project">
          <hr>
          <input type="" class="input-filter-task" name="">
          <ul class="label-list">
            <li class="label-list-item">
              <a class="label-list-item-link js-toggle-label-filter"
                href="<%= project_path @project %>">
                <div class="label-list-item-link-label color-default" >
                  <span class="card-label mod-square card-label-"></span>
                </div>
                <span class="label-list-item-link-name">Tất cả</span>
              </a>
            </li>
            <% if @labels.any? %>
              <% @labels.each do |label| %>
                <li class="label-list-item">
                  <a class="label-list-item-link js-toggle-label-filter"
                    href="<%= project_path @project %>?label=<%= label.id %>">
                    <div class="label-list-item-link-label color-<%= label.name %>">
                      <span class="card-label mod-square card-label-"></span>
                    </div>
                    <span class="label-list-item-link-name"><%= label.name %></span>
                  </a>
                </li>
              <% end %>
            <% end %>
          </ul>
          <hr>
          <ul class="label-list">
            <% if @users.any? %>
              <% @users.each do |user| %>
                <li class="label-list-item">
                  <a class="label-list-item-link js-toggle-label-filter"
                    href="<%= project_path @project %>?user=<%= user.user_id %>">
                    <div class="label-list-item-link-label" style="border-radius: 50px;">
                      <%= image_tag "https://thesocietypages.org/socimages/files/2009/05/vimeo.jpg",
                        class: "avatar-filter", title: user.name %>
                    </div>
                    <span class="label-list-item-link-name"><%= user.name %> (<%= user.email %>)</span>
                  </a>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </span>
    </section>
  </div>
</div>
