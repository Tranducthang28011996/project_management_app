    <button class="btn btn-sm btn-nav pull-right btn-show-menu-project">
      <i class="fa fa-bars" aria-hidden="true"></i>
    </button>
  </div>

  <%= hidden_field_tag :project_id, @project.id %>

  <section class="board-container" id="connected">
    <div class="item-board" data-type-task="new">
      <div class="header-board">
        <span>New</span>
        <button class="btn btn-sm btn-info-item-board">
          <i class="fa fa-ellipsis-h" aria-hidden="true"></i>
        </button>
      </div>
      <div class="task-board connected sortable list" data-status-request="new">
        
        <% if @task[:new].any? %>
          <% @task[:new].each do |task| %>
            <%= render partial: "tasks/item_task", locals: {task: task} %>
          <% end %>
        <% end %>
        <div class="position-add-task"></div>
        <div class="item-new-task">
          <%= form_for [@project, @project.tasks.build],
            html:{method: :post, :class => "form form-add-task"} do |f| %>
            <%= f.text_area :name, class: "field-info-new-task" %>
            <%= f.submit "Add", class: "btn btn-success btn-add-task" %>
            <button class="btn-close-form-new-task"><i class="fa fa-times" aria-hidden="true"></i></button>
          <% end %>
        </div>
        <div class="footer-board">
          <a href="#">Add Task...</a>
        </div>
      </div>
    </div>
