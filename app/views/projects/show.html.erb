<div id="content">
  <div id="nav-menu">
    <button class="btn btn-sm btn-nav">
      <%= @project.name %>
    </button>

    <button class="btn btn-sm btn-nav">
      <i class="fa fa-heart-o" aria-hidden="true"></i>
    </button>

    <button class="btn btn-sm btn-nav">
      <i class="fa fa-lock" aria-hidden="true"></i> Private
    </button>

    <button class="btn btn-sm btn-nav pull-right btn-show-menu-project">
      <i class="fa fa-bars" aria-hidden="true"></i>
      <%= t "project.show_menu" %>
    </button>
  </div>

  <%= hidden_field_tag :project_id, @project.id %>
  <%= hidden_field_tag :team_id, @project.team.id %>

  <section class="board-container" id="connected">
    <%= render partial: "projects/item_board", locals: {status: "new"} %>
    <%= render partial: "projects/item_board", locals: {status: "in_process"} %>
    <%= render partial: "projects/item_board", locals: {status: "resolved"} %>
    <%= render partial: "projects/item_board", locals: {status: "testing"} %>
    <%= render partial: "projects/item_board", locals: {status: "done"} %>
  </section> 

  <section class="side-bar-menu-project">
    <h4 class="title-menu-info-project"><%= t "project.menu" %></h4>
    <div class="list-member-project">
      <% @team_user[0..7].each do |user| %>
        <%= link_to user, class: "item-member-project" do %>
          <% if user.avatar.present? %>
            <%= image_tag user.avatar.url, title: user.name, class: "avatar-item-user-list-member" %>
          <% else %>
            <%= image_tag "https://thesocietypages.org/socimages/files/2009/05/vimeo.jpg", title: user.name,
              class: "avatar-item-user-list-member" %>
          <% end %>
        <% end %>
      <% end %>
      <span class="dropdown dropdown-add-label">
        <a class="dropdown-toggle btn btn-xs" type="button" data-toggle="dropdown">
          ...
        </a>
        <div class="dropdown-menu list-full-member">  
        </div>
      </span>
    </div>
    <div class="dropdown">
      <button class="btn btn-invite-member dropdown-toggle" type="button" data-toggle="dropdown">
        <i class="fa fa-user-plus" aria-hidden="true"></i> <%= t "project.invite" %>...
      </button>
      <div class="dropdown-menu form-search-member">
        <h3 class="title"><%= t "project.member" %></h3>
        <input type="text" class="form-control search-member" placeholder="abc@gmail.com">
        <div class="result-search-user-add">
          <div class="show-info-user-search">
            Search for a person in Trello by name or email address, or enter an email address to invite someone new.
          </div>
        </div>
      </div>
    </div>
    <hr>

    <ul class="list-setting">
