<div id="content">
  <div id="nav-menu">
    <button class="btn btn-sm btn-nav">
      <%= @project.name %>
    </button>

    <button class="btn btn-sm btn-nav">
      <i class="fa fa-heart-o" aria-hidden="true"></i>
    </button>

    <button class="btn btn-sm btn-nav">
      <i class="fa fa-lock" aria-hidden="true"></i> Private
